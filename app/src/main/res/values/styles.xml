        <item name="android:popupBackground">#303030</item> <!-- Dark background -->
        <item name="android:textColor">#FFFFFF</item>        <!-- White text -->
    </style>
    <style name="AppTheme.OptionsDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowMinWidthMajor">90%</item> <!-- Width -->
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>
</resources>